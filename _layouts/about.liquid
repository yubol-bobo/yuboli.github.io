---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        <span class="font-weight-bold">{{ site.last_name }}</span>
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    <div class="profile-content-wrapper">
      {% if page.profile %}
        <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
          {% if page.profile.image %}
            {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
            {% if page.profile.image_circular %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
            {% else %}
              {% assign profile_image_class = 'img-fluid z-depth-1
        rounded' %}
            {% endif %}
            {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
        30vw, 95vw"{% endcapture %}
            {%
              include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
              cache_bust=true
            %}
          {% endif %}
          {% if page.profile.more_info %}
            <div class="more-info">{{ page.profile.more_info }}</div>
          {% else %}
            <div class="typed-info" style="min-height: 3em; height: 3em; text-align: center; margin-bottom: 1rem;"></div>
            <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
            <script>
              var options = {
                strings: [
                  "ğŸ“ PhD Student @ CMU ğŸ“",
                  "ğŸ“ MS in Information Systems @ CMU ğŸ“",
                  "ğŸ“ BS in Applied mathematics @ UCSD ğŸ“",
                  "ğŸ’» AI Researcher ğŸ’»",
                  "ğŸ“š Lifelong Learner ğŸ“š"
                ],
                typeSpeed: 30,
                backSpeed: 25,
                backDelay: 2000,
                startDelay: 500,
                loop: true,
                shuffle: false,
                showCursor: false,
                smartBackspace: true,
                fadeOut: false,
              };
              var typed = new Typed(".typed-info", options);
            </script>
          {% endif %}
        </div>
      {% endif %}

      <div class="clearfix">{{ content }}</div>
    </div>
    
    <div style="clear: both;"></div>

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">ğŸ‰ News</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Separator between News and Awards -->
    {% if page.announcements and page.announcements.enabled and page.awards and page.awards.enabled %}
      <hr style="margin: 2rem 0; border: none; border-top: 1px solid var(--global-divider-color);">
    {% endif %}

    <!-- Awards -->
    {% if page.awards and page.awards.enabled %}
      <h2>
        <a href="{{ '/awards/' | relative_url }}" style="color: inherit">ğŸ† Awards</a>
      </h2>
      <div class="awards">
        <ul>
          <li><strong>2025</strong> - TCS Presidential Fellowship, Carnegie Mellon University</li>
          <li><strong>2024</strong> - <a href="https://www.cs.cmu.edu/cmlh/2024-generative-ai-fellows">CMLH Fellowship in Generative AI in Healthcare</a>, Carnegie Mellon University</li>
          <li><strong>2023</strong> - <a href="https://www.cs.cmu.edu/cmlh/digital-health-archive/cmlh-digital-health-fellows-2023">CMLH Fellowship in Digital Health Innovation</a>, Carnegie Mellon University</li>
          <!-- Add more awards here -->
        </ul>
      </div>
    {% endif %}

    <!-- Separator between Awards and Selected Publications -->
    {% if page.awards and page.awards.enabled and page.selected_papers %}
      <hr style="margin: 2rem 0; border: none; border-top: 1px solid var(--global-divider-color);">
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">â­ Selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    <!-- GitHub Stats Section -->
    {% if site.data.repositories.github_users %}
      <hr style="margin: 2rem 0; border: none; border-top: 1px solid var(--global-divider-color);">
      <h2>ğŸ–¥ï¸ GitHub Activity</h2>

      <!-- GitHub Contribution Heatmap -->
      <div style="margin-top: 2rem;">
        {% for user in site.data.repositories.github_users %}
          <div class="repo p-2" style="max-width: 100%; overflow-x: auto;">
            <a href="https://github.com/{{ user }}">
              <img
                class="only-light"
                alt="{{ user }} contribution heatmap"
                src="https://ghchart.rshah.org/2ea44f/{{ user }}"
                style="width: 100%; min-width: 900px; height: auto;"
              >
              <img
                class="only-dark"
                alt="{{ user }} contribution heatmap"  
                src="https://ghchart.rshah.org/39d353/{{ user }}"
                style="width: 100%; min-width: 900px; height: auto; filter: invert(1) hue-rotate(180deg);"
              >
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
